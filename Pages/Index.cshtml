@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Demo Store — Nike Products (Unauthorized Demo)</title>
    <meta name="description" content="Demo cửa hàng bán giày thể thao">
    <link rel="stylesheet" href="demo.css" />

</head>
<body>

<!-- Khu vực đăng nhập / đăng ký -->
<div style="background-color:#f8f8f8; padding:20px; border-radius:10px; margin-bottom:20px;">
    <h3 style="margin-bottom:10px;">Đăng nhập khách hàng</h3>

    <form method="post" asp-page="/Login">
        <input type="text" name="Username" placeholder="Tên đăng nhập" required style="margin:5px; padding:5px;" />
        <input type="password" name="Password" placeholder="Mật khẩu" required style="margin:5px; padding:5px;" />
        <button type="submit" style="margin:5px;">Đăng nhập</button>
    </form>

    <p>Chưa có tài khoản?
        <a asp-page="/Register">Đăng ký ngay</a>
    </p>
</div>

<!-- Nội dung trang chủ -->
<h2>Bộ sưu tập Nike mới về</h2>
<p>Chạy bộ, tập gym hay lối sống — chọn đôi phù hợp với bạn.</p>


    <div class="topbar">Miễn phí vận chuyển cho đơn hàng từ 1.000.000đ</div>
    <header class="header">
        <div class="container header-inner">
            <div class="logo">Athletics Store</div>
            <nav class="nav" id="categoryNav">
                <button data-cat="all" class="active">Tất cả</button>
                <button data-cat="running">Running</button>
                <button data-cat="training">Training</button>
                <button data-cat="lifestyle">Lifestyle</button>
            </nav>
            <div class="search">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><path d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 1 1 0-15 7.5 7.5 0 0 1 0 15Z" stroke="#6b7280" stroke-width="2" stroke-linecap="round" /></svg>
                <input id="searchInput" placeholder="Tìm giày Nike..." />
            </div>
            <button class="cart-btn" id="openCart">
                🛒 Giỏ hàng
                <span class="badge" id="cartCount">0</span>
            </button>
        </div>
    </header>

    <div class="container">
        <section class="hero">
            <div style="flex:1 1 360px">
                <h1>Bộ sưu tập Nike mới về</h1>
                <p>Chạy bộ, tập gym hay lifestyle — chọn đôi phù hợp với bạn.</p>
                <div class="disclaimer">Demo không phải website chính thức của Nike. Nếu bán hàng thật, hãy đảm bảo bạn là đại lý/đối tác được ủy quyền và tuân thủ hướng dẫn thương hiệu.</div>
            </div>
            <div style="flex:1 1 240px; min-width:220px; text-align:center">
                <img alt="Sneaker" style="max-width:280px; width:100%" src="https://picsum.photos/seed/nikehero/600/400" />
            </div>
        </section>

        <section class="products" id="productGrid"></section>
    </div>

    <!-- Cart drawer -->
    <div class="backdrop" id="backdrop"></div>
    <aside class="drawer" id="cartDrawer" aria-hidden="true">
        <header>
            <strong>Giỏ hàng</strong>
            <button id="closeCart">Đóng ✕</button>
        </header>
        <div class="items" id="cartItems"></div>
        <footer>
            <div class="totals">
                <div>Tạm tính</div>
                <div id="cartTotal" class="price">0đ</div>
            </div>
            <button class="btn btn-primary" id="checkoutBtn" style="width:100%">Tiến hành đặt hàng</button>
        </footer>
    </aside>

    <!-- Checkout modal -->
    <div class="modal" id="checkoutModal">
        <div class="panel">
            <header>
                <strong>Đặt hàng</strong>
                <button id="closeCheckout">Đóng ✕</button>
            </header>
            <div class="content">
                <div class="col">
                    <h4>Thông tin nhận hàng</h4>
                    <div class="field">
                        <label>Họ và tên</label>
                        <input id="name" placeholder="Nguyễn Văn A" />
                    </div>
                    <div class="field">
                        <label>Số điện thoại</label>
                        <input id="phone" placeholder="09xx xxx xxx" />
                    </div>
                    <div class="field">
                        <label>Email (tuỳ chọn)</label>
                        <input id="email" placeholder="you@email.com" />
                    </div>
                    <div class="field">
                        <label>Địa chỉ</label>
                        <textarea id="address" rows="3" placeholder="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành"></textarea>
                    </div>
                    <div class="field">
                        <label>Ghi chú (tuỳ chọn)</label>
                        <textarea id="note" rows="2"></textarea>
                    </div>
                </div>
                <div class="col">
                    <h4>Đơn hàng của bạn</h4>
                    <div id="summary"></div>
                    <div style="display:flex; justify-content:space-between; margin-top:10px; font-weight:800">
                        <div>Tổng cộng</div>
                        <div id="grandTotal">0đ</div>
                    </div>
                    <div class="disclaimer" style="margin-top:8px">
                        Đây là demo. Nút “Đặt hàng” sẽ mô phỏng việc tạo đơn, không thanh toán thật.
                    </div>
                    <button id="placeOrder" class="btn btn-primary" style="margin-top:12px; width:100%">Đặt hàng (demo)</button>
                    <button id="clearCart" class="btn btn-danger" style="margin-top:8px; width:100%">Xoá giỏ hàng</button>
                </div>
            </div>
        </div>
    </div>
    <div id="product-list"
    </div>
    <script>
        // Định dạng tiền VNĐ
        const VND = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' });

        // Dữ liệu sản phẩm
        const products = [
            {
                id: 'pegasus',
                name: 'Nike Air Zoom Pegasus 41',
                price: 3599000,
                category: 'running',
                colors: ['Đen', 'Trắng'],
                sizes: ['38', '39', '40', '41', '42'],
                img_src: 'data:image/jpeg;base64,'

            },
            {
                id: 'metcon',
                name: 'Nike Metcon 9',
                price: 2999000,
                category: 'training',
                colors: ['Xanh Neon', 'Đen'],
                sizes: ['39', '40', '41', '42', '43'],
                img_src:'data:image/jpeg;base64,'

            },
            {
                id: 'revolution',
                name: 'Nike Revolution 7',
                price: 1899000,
                category: 'running',
                colors: ['Xám', 'Xanh Dương'],
                sizes: ['38', '39', '40', '41', '42'],
                img_src:'data:image/jpeg;base64,'
            },
            {
                id: 'court',
                name: 'Nike Court Vision Low',
                price: 2499000,
                category: 'lifestyle',
                colors: ['Trắng', 'Xanh Lá'],
                sizes: ['38', '39', '40', '41'],
                img_src:'data:image/jpeg;base64,'
            },
            {
                id: 'airmax',
                name: 'Nike Air Max 270',
                price: 3999000,
                category: 'lifestyle',
                colors: ['Trắng', 'Đỏ'],
                sizes: ['40', '41', '42', '43'],
                img_src: 'data:image/jpeg;base64,'

            },
            {
                id: 'downshifter',
                name: 'Nike Downshifter 13',
                price: 1599000,
                category: 'running',
                colors: ['Đen', 'Xanh'],
                sizes: ['38', '39', '40', '41', '42'],
                img_src:'data:image/webp;base64,'
            }
        ];

        // Biến lưu giỏ hàng
        const CART_KEY = 'nike_demo_cart_v1';
        let cart = loadCart();
        let currentCategory = 'all';
        let searchQuery = '';

        // Phần tử HTML
        const productGrid = document.getElementById('productGrid');
        const categoryNav = document.getElementById('categoryNav');
        const searchInput = document.getElementById('searchInput');
        const cartCount = document.getElementById('cartCount');
        const backdrop = document.getElementById('backdrop');
        const cartDrawer = document.getElementById('cartDrawer');
        const openCartBtn = document.getElementById('openCart');
        const closeCartBtn = document.getElementById('closeCart');
        const cartItems = document.getElementById('cartItems');
        const cartTotal = document.getElementById('cartTotal');
        const checkoutBtn = document.getElementById('checkoutBtn');
        const checkoutModal = document.getElementById('checkoutModal');
        const closeCheckout = document.getElementById('closeCheckout');
        const summary = document.getElementById('summary');
        const grandTotal = document.getElementById('grandTotal');
        const placeOrder = document.getElementById('placeOrder');
        const clearCartBtn = document.getElementById('clearCart');
        const nameEl = document.getElementById('name');
        const phoneEl = document.getElementById('phone');
        const emailEl = document.getElementById('email');
        const addressEl = document.getElementById('address');
        const noteEl = document.getElementById('note');

        // Khởi tạo
        renderProducts();
        updateCartUI();

        // ------------------ FILTER & SEARCH ------------------
        categoryNav?.addEventListener('click', (e) => {
            if (e.target.tagName === 'BUTTON') {
                currentCategory = e.target.dataset.cat || 'all';
                [...categoryNav.querySelectorAll('button')].forEach(b => b.classList.remove('active'));
                e.target.classList.add('active');
                renderProducts();
            }
        });

        searchInput?.addEventListener('input', (e) => {
            searchQuery = e.target.value.toLowerCase();
            renderProducts();
        });

        // ------------------ CART HANDLERS ------------------
        openCartBtn?.addEventListener('click', openCart);
        closeCartBtn?.addEventListener('click', closeCart);
        backdrop?.addEventListener('click', () => { closeCart(); hideCheckout(); });

        checkoutBtn?.addEventListener('click', () => {
            if (cart.length === 0) { alert('Giỏ hàng trống'); return; }
            showCheckout();
        });

        closeCheckout?.addEventListener('click', hideCheckout);
        placeOrder?.addEventListener('click', placeDemoOrder);
        clearCartBtn?.addEventListener('click', () => {
            if (confirm('Xoá toàn bộ giỏ hàng?')) {
                cart = [];
                saveCart(); updateCartUI(); renderSummary();
            }
        });

        // ------------------ FUNCTIONS ------------------
        function cardHTML(p) {
            return `
            <div class="card">
                <div class="card-img">
                    <img src="${p.img_src}" alt="${p.name}">
                    ${p.tag ? `<span class="tag">${p.tag}</span>` : ''}
                </div>
                <div class="card-body">
                    <h3>${p.name}</h3>
                    <p class="price">${VND.format(p.price)}</p>
                    <button onclick="addToCart('${p.id}')" class="btn btn-primary">Thêm vào giỏ</button>
                </div>
            </div>`;
        }

        function renderProducts() {
            const filtered = products.filter(p => {
                const matchCat = currentCategory === 'all' || p.category === currentCategory;
                const matchSearch = !searchQuery || p.name.toLowerCase().includes(searchQuery);
                return matchCat && matchSearch;
            });
            productGrid.innerHTML = filtered.map(p => cardHTML(p)).join('') ||
                `<div>Không tìm thấy sản phẩm phù hợp.</div>`;
        }

        function getProduct(id) {
            return products.find(p => p.id === id);
        }

        function addToCart(id) {
            const found = cart.find(c => c.id === id);
            if (found) found.qty++;
            else cart.push({ id, qty: 1 });
            saveCart();
            updateCartUI();
        }

        function updateCartUI() {
            cartCount.textContent = cart.reduce((s, c) => s + c.qty, 0);
            cartItems.innerHTML = cart.map(c => {
                const p = getProduct(c.id);
                return `
                <div class="cart-item">
                    <img src="${p.img_src}" alt="${p.name}">
                    <div>
                        <div>${p.name}</div>
                        <div>${VND.format(p.price)} × ${c.qty}</div>
                    </div>
                    <button onclick="removeFromCart('${c.id}')">✕</button>
                </div>`;
            }).join('') || '<p>Giỏ hàng trống.</p>';
            const total = cart.reduce((s, c) => s + getProduct(c.id).price * c.qty, 0);
            cartTotal.textContent = VND.format(total);
        }

        function removeFromCart(id) {
            cart = cart.filter(c => c.id !== id);
            saveCart();
            updateCartUI();
        }

        function openCart() {
            cartDrawer.setAttribute('aria-hidden', 'false');
            backdrop.style.display = 'block';
        }

        function closeCart() {
            cartDrawer.setAttribute('aria-hidden', 'true');
            backdrop.style.display = 'none';
        }

        function showCheckout() {
            renderSummaray();
            checkoutModal.style.display = 'flex';
        }

        function hideCheckout() {
            checkoutModal.style.display = 'none';
        }

        function renderSummary() {
            summary.innerHTML = cart.map(c => {
                const p = getProduct(c.id);
                return `<div style="display:flex; justify-content:space-between;">
                    <span>${p.name} × ${c.qty}</span>
                    <span>${VND.format(p.price * c.qty)}</span>
                </div>`;
            }).join('');
            const total = cart.reduce((s, c) => s + getProduct(c.id).price * c.qty, 0);
            grandTotal.textContent = VND.format(total);
        }

        function placeDemoOrder() {
            if (!nameEl.value.trim()) { alert('Vui lòng nhập họ tên'); return; }
            if (!phoneEl.value.trim()) { alert('Vui lòng nhập số điện thoại'); return; }
            if (!addressEl.value.trim()) { alert('Vui lòng nhập địa chỉ'); return; }

            const order = {
                customer: {
                    name: nameEl.value.trim(),
                    phone: phoneEl.value.trim(),
                    email: emailEl.value.trim(),
                    address: addressEl.value.trim(),
                    note: noteEl.value.trim()
                },
                items: cart.map(c => ({ ...c })),
                total: cart.reduce((s, c) => s + getProduct(c.id).price * c.qty, 0),
                createdAt: new Date().toISOString()
            };
            console.log('Demo order:', order);
            alert('✅ Đơn hàng DEMO đã tạo! Kiểm tra console để xem chi tiết.');
            cart = [];
            saveCart(); updateCartUI(); hideCheckout(); closeCart();
            [nameEl, phoneEl, emailEl, addressEl, noteEl].forEach(i => i.value = '');
        }

        function saveCart() {
            localStorage.setItem(CART_KEY, JSON.stringify(cart));
        }

        function loadCart() {
            try { return JSON.parse(localStorage.getItem(CART_KEY)) || []; }
            catch { return []; }
        }
    </script>

</body>
</html>

